      </div>
    <% end %>

    <br><br>

    <h1>Submit a new race:</h1>

    <div class="field">
      <%= form.label :name %>
      <%= form.text_field :name, id: :race_name %>
    </div>

    <div class="field">
      <%= form.label :details %>
      <%= form.text_area :details, id: :race_details %>
    </div>

    <div class="field">
      <%= form.label :date %>
      <%= form.datetime_select :date, id: :race_date %>
    </div>

    <div class="field">
      <%= form.label :address %>
      <%= form.text_field :address, id: :race_address %>
    </div>

    <div class="field">
      <%= form.label :distance %>
      <%= form.select :distance, ['5K', '10K', 'Half-Marathon','Marathon'], id: race_distance %>
    </div>

    <div class="field">
      <%= form.hidden_field :latitude%>
      <%= form.hidden_field :latitude, id: :race_latitude %>
    </div>

    <div class="field">
      <%= form.hidden_field :longitude %>
      <%= form.hidden_field :longitude, id: :race_longitude %>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>
</div>
</div>

